<style>
  
  /* Container for all count cards */
.countBox {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center; /* center on screen */
  margin: 60px 20px;
}

/* Individual chat count card */
.chatCount {
  background-color:  rgb(224, 223, 223);
  border-radius: 20px;
  padding: 30px 20px;
  width: 250px;
  text-align: center;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  transition: transform 0.3s, box-shadow 0.3s;
  cursor: default;

}

/* Hover effect */
.chatCount:hover {
  transform: translateY(-5px) scale(1.05);
  box-shadow: 0 12px 20px black;
  font-size: 2.7rem;
}

/* Text inside card */
.chatCount .text {
  width: 100%;
  padding: 4px;
  border-bottom: 1px solid rgba(0,0,0,0.3);
  font-size: 1rem;
   color: black;
  margin-bottom: 10px;
  font-weight: 500;
}

/* Number inside card */
.chatCount h1 {
  font-size: 2.5rem;
   color: black;
  margin: 0;
  font-weight: 700;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .chatCount {
    width: 45%;
  }
}

@media (max-width: 480px) {
  .chatCount {
    width: 100%;
  }
}
.excel-grid {

  display: grid;

  grid-template-columns: 100px repeat(15, 1fr);
  max-width: 1000px;
  border: 1px solid #ccc;
  overflow: auto;
  font-family: Arial, sans-serif;
}

.cell {
  display: flex;
    text-align: center;
  justify-content: center;
  align-items: center;
  border: 1px solid #444242;
  min-height: 40px;
  width: 100px;
  padding: 5px;
  font-size: 16px;
  font-weight: bold;
  outline: none;
}

.cell:focus {
